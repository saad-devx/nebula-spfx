{
  "extends": "./node_modules/@microsoft/rush-stack-compiler-4.7/includes/tsconfig-web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@nebula/*": [
        "src/nebula/*"
      ]
    },
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "inlineSources": false,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@microsoft"
    ],
    "types": [
      "webpack-env"
    ],
    "lib": [
      "ES6",
      "dom",
      "ES2016.Array.Include",
      "ES2016"
    ]
  },
  "include": [
    // "src/**/*.ts",
    // "src/**/*.js",
    // "src/**/*.scss",
    "src/**/*",
  ]
}